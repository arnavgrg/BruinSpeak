<%= stylesheet_link_tag "https://fonts.googleapis.com/css?family=Abel|Open+Sans|Source+Sans+Pro" %>
<% @title = "Explore" %>

<body style="background: linear-gradient(to top, rgb(124, 172, 249), rgb(255,255,255)) fixed;">
<div style="width: 50%; margin: 0 auto; margin-top: 30px; font-size:500%; text-align: center; color: rgb(30, 56, 99)"> IMPACT </div>
<div style="width: 100%; height: 50%">
  <div style="float:left; margin-left: 2.5%; margin-top: 5%; height: 30%; width: 30%">
    <%= line_chart @data_petitions_started %>
  </div>
  <div style="float: left; margin-left: 2.5%; width:30%; height: 30%; margin-top: 5%; display: inline-block">
    <%= pie_chart @data_pie_chart%>
  </div>
  <div style="margin-left: 2.5%; width:30%; height: 30%; margin-top: 5%; display: inline-block">
    <%= line_chart @data_petitions_signed%>
  </div>
</div>
