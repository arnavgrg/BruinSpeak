<nav id="topbar" class="navbar navbar-default navbar-custom" role="navigation">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

            <%= link_to new_petition_path, :class => "navbar-brand navbar-brand-styling brand-large-view" do %>
            <i class="fa fa-pencil-square-o fa-2x" aria-hidden="true"></i>
            <div>Start Petition</div>
            <% end %>

            <ul class="nav navbar-nav navbar-center midNav">
                 <li>
                    <%= link_to root_path do %>
                    BRUIN<span id="speak">SPEAK<span>
                        <% end %>
                </li>
            </ul>

            <ul class="nav navbar-nav navbar-right rightNav">

                <li><%= link_to "Explore", explore_path %></li>
                <% if current_user %>
                <%= link_to user_path(current_user.id) do %>
                    <li class="navbar-dynam-content" ><%= current_user.first_name + " " + current_user.last_name %></li>
                    <% if current_user.profile_pic.url %>
                    <li><img src=<%= image_path(current_user.profile_pic.url) %> class="img-circle" width="50" alt="edit" /></li>
                    <% else %>
                    <li><img src=<%= image_path("default_profile_picture.png") %> class="img-circle" width="50" alt="edit" /></li>
                    <% end %>
                <% end %>
                <li><%= link_to "Logout", destroy_user_session_path, :method => "delete" %></li>
                <% else %>
                <li><%= link_to "Sign in with Google", user_google_oauth2_omniauth_authorize_path %></li>
                <% end %>
            </ul>


            <%= form_tag(search_path, method: 'get', class: 'navbar-form', role: 'search', id: 'navbar-form') do %>
                <div class="input-group nav-input-group">
                    <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "What are you looking for?"%>

                    <span class="input-group-btn" id="nav-search-span">
                    <%= button_tag(class: 'btn btn-default btn-nav', type: 'reset') do%>
                        <i class="fa fa-times" aria-hidden="true"></i>
                    <% end %>



                    <%= button_tag(class: 'btn btn-default btn-nav', type: 'submit') do%>
                        <i class="fa fa-search" aria-hidden="true"></i>
                    <% end %>
                    </span>




                </div>
            <% end %>
        </div>
    </div>
</nav>
